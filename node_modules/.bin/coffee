#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/miro/Dev/Playground/coffee-app/node_modules/coffee/bin/node_modules:/Users/miro/Dev/Playground/coffee-app/node_modules/coffee/node_modules:/Users/miro/Dev/Playground/coffee-app/node_modules:/Users/miro/Dev/Playground/node_modules:/Users/miro/Dev/node_modules:/Users/miro/node_modules:/Users/node_modules:/node_modules"
else
  export NODE_PATH="$NODE_PATH:/Users/miro/Dev/Playground/coffee-app/node_modules/coffee/bin/node_modules:/Users/miro/Dev/Playground/coffee-app/node_modules/coffee/node_modules:/Users/miro/Dev/Playground/coffee-app/node_modules:/Users/miro/Dev/Playground/node_modules:/Users/miro/Dev/node_modules:/Users/miro/node_modules:/Users/node_modules:/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../coffee/bin/coffee" "$@"
else
  exec node  "$basedir/../coffee/bin/coffee" "$@"
fi
